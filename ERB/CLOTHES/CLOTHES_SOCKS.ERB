;-------------------------------------------------
;지시されたとおりの양말の플래그を설정するために使う
;-------------------------------------------------
@SETFLAG_SOCKS(ARGS:1, ARGS:2, ARGS:3, ARGS:4, ARGS:5, ARGS:6, ARGS:7, ARGS:8, ARGS:9, ARGS:10)
#FUNCTION
#DIM LCOUNT

LOCAL = 0
FOR LCOUNT, 1, 11
	ARGS = %ARGS:LCOUNT%
	SELECTCASE ARGS
	CASE "발목까지"
		SETBIT LOCAL, 0
	CASE "하이삭스"
		SETBIT LOCAL, 1
	CASE "니삭스", "니삭스"
		SETBIT LOCAL, 2
	CASE "사이하이삭스"
		SETBIT LOCAL, 3
	CASE "게트르"
		SETBIT LOCAL, 4
		LOCAL |= SETFLAG_COMMON("발노출")
	CASE "레그워머"
		SETBIT LOCAL, 5
		LOCAL |= SETFLAG_COMMON("발노출")
	CASE "和風"
		SETBIT LOCAL, 6
	CASE "버선"
		SETBIT LOCAL, 6
		SETBIT LOCAL, 0
	CASE "각반"
		SETBIT LOCAL, 6
		SETBIT LOCAL, 4
	CASE "스타킹"
		SETBIT LOCAL, 7
	CASE "가터"
		SETBIT LOCAL, 8
	CASE "스타킹컬러"
		IF RAND:2
			LOCAL |= SETFLAG_COMMON("하양")
		ELSE
			LOCAL |= SETFLAG_COMMON("검정")
		ENDIF
	CASE "가터컬러"
		IF RAND:3 == 0
			LOCAL |= SETFLAG_COMMON("순백")
		ELSE
			LOCAL |= SETFLAG_COMMON("Ｈめの色")
		ENDIF
	CASEELSE
		SIF STRLENS(ARGS)
			LOCAL |= SETFLAG_COMMON(ARGS)
	ENDSELECT
	SIF STRLENS(ARGS:(LCOUNT + 1) ) == 0
		RETURNF LOCAL
NEXT
RETURNF LOCAL

;-------------------------------------------------
;ARGの양말が条件ARGSを満たすか確認する
;-------------------------------------------------
@CHECK_SOCKS(ARGS, ARG)
#FUNCTION
SIF ARG == 0 && TARGET
	ARG = TARGET
SIF EQUIP:ARG:양말 == 0
	RETURNF 0
SIF (SETFLAG_SOCKS(ARGS)&EQUIP:ARG:양말) == SETFLAG_SOCKS(ARGS)
	RETURNF 1
RETURNF 0

