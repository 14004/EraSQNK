		LOCAL = RAND:10
		SIF GETBIT(IS_FAVORITE_DRESS(ARG), LOCAL) == 0
			CONTINUE

		CALL SET_FAVORITE_DRESS, ARG, LOCAL
		BREAK
	NEXT
